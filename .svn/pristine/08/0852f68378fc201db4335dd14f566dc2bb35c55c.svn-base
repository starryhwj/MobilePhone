{% extends "extends/base.html" %}
{% load staticfiles %}
{% block title %}聚宝云 | 关键字管理{% endblock title %}
{% block css %}
{% endblock css %}
{% block content %}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    关键字管理
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <button class="btn btn-default btn-bold btn-upper btn-font-sm" data-toggle="modal"
                        data-target="#createModal" onclick="initcreatemodal()">
                        <i class="flaticon2-add-1"></i>
                        添加关键字
                    </button>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <div class="kt-form kt-fork--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-input-icon kt-input-icon--left">
                                    <input type="text" class="form-control" placeholder="请输入..."
                                        id="generalMaintenanceNumberMissionKeywordSearch">
                                    <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>标签</label>
                                    </div>
                                    <div class="kt-form__control">
                                        <select class="form-control bootstrap-select" id="kt_classfications">
                                            <option value="">全部</option>
                                            <option value="-1">无</option>
                                            {% for cla in classfications %}
                                            <option value={{ cla.id }}>{{ cla.Name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--end: Search Form -->

        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">

            <!--begin: Datatable -->
            <div class="kt_datatable" id="local_record_selection"></div>

            <!--end: Datatable -->

            <!-- begin: Modal -->
            <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">添加关键字</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="kt-login-v1__form kt-form" autocomplete="off"  method="post"
                            enctype="multipart/form-data" id='create_form'>
                            <div class="modal-body">
                                {% csrf_token %}
                                <div class="form-group">
                                    <label>关键字</label>
                                    <input type='text' class="form-control" id="id_name" name="name">
                                </div>
                                <div class="form-group">
                                    <label>标签</label>
                                    <div>
                                        <select class="form-control kt-select2" id="id_category" name="category"
                                            multiple="multiple">
                                            {% for cat in classfications %}
                                            <option value={{ cat.id }}>{{ cat.Name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-brand" data-dismiss="modal">关闭</button>
                                <button type="button" class="btn btn-brand "
                                    onclick="CreateMaintenanceNumberMissionKeyword()">保存
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">关键字详情</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="kt-login-v1__form kt-form" autocomplete="off" method="post"
                            enctype="multipart/form-data" id='edit_form'>
                            <div class="modal-body">
                                {% csrf_token %}
                                <div class="form-group">
                                    <label>关键字</label>
                                    <input type='text' class="form-control" id="id_edit_name" name="edit_name">
                                </div>
                                <div class="form-group">
                                    <label>标签</label>
                                    <div>
                                        <select class="form-control kt-select2" id="id_eidt_category"
                                            name="edit_category">
                                            <option value=''></option>
                                            {% for cat in classfications %}
                                            <option value={{ cat.id }}>{{ cat.Name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group" style="display: none">
                                    <label>数据ID</label>
                                    <input type='text' class="form-control" id="id_data_id" name="data_id">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-brand" data-dismiss="modal">关闭</button>
                                <button type="button" class="btn btn-brand"
                                    onclick="EditMaintenanceNumberMissionKeyword()">保存
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end: Modal -->

            <!--begin: HideData-->
            <div class="btn btn-clean kt-hidden" id="data_url">{{ data_url }}</div>
            <div class="btn btn-clean kt-hidden" id="create_url">{{ create_url }}</div>
            <div class="btn btn-clean kt-hidden" id="delete_url">{{ delete_url }}</div>
            <div class="btn btn-clean kt-hidden" id="get_by_id_url">{{ get_by_id_url }}</div>
            <div class="btn btn-clean kt-hidden" id="edit_url">{{ edit_url }}</div>
            {% csrf_token %}
            <!--end: HideData-->
        </div>
    </div>
</div>
{% endblock content %}
{% block js %}
<script src="{% static 'plugins/custom/datatables/datatables.bundle.js' %}" type="text/javascript"></script>
<script src="{% static 'js/pages/custom/MissionManage/MaintenanceNumberMissionKeyword.js' %}" type="text/javascript">
</script>
{% endblock js %}