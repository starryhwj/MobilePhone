"use strict";
// Class definition

var KTDatatableRecordSelectionDemo = function () {

    // Private functions
    var options = {
        // datasource definition
        data: {
            type: 'remote',
            source: {
                read: {
                    url: $("#data_url").text(),
                    params: {
                        csrfmiddlewaretoken: document.getElementsByName("csrfmiddlewaretoken")[0].value
                    }
                },
            },
            pageSize: 10,
            serverPaging: true,
            serverFiltering: true,
            serverSorting: true,
        },
        // layout definition
        layout: {
            theme: 'default', // datatable theme
            class: '', // custom wrapper class
            scroll: true, // enable/disable datatable scroll both horizontal and
            // vertical when needed.
            height: 1000, // datatable's body's fixed height
            footer: false // display/hide footer
        },

        // column sorting
        sortable: true,

        pagination: true,

        // Translate
        translate: {
            records: {
                processing: '请等待...',
                noRecords: '没有数据',
            },
            toolbar: {
                pagination: {
                    items: {
                        default: {
                            first: '首页',
                            prev: '前一页',
                            next: '下一页',
                            last: '尾页',
                            more: '更多',
                            input: '请输入页码',
                            select: '选择每页行数'
                        },
                        info: '第{{start}} - {{end}}行，共{{total}}行',
                    },
                },
            },
        },

        // columns definition

        columns: [{
            field: 'id',
            title: 'ID',
            sortable: false,
            autoHide: false,
            width: 20,
        }, {
            field: 'Item_Img',
            title: '商品图片',
            autoHide: false,
            sortable: false,
            template: function (row) {
                return '\
                      <a class="kt-media kt-media--xl">\
                          <img src= "' + row.Item_Img + '" alt="image">\
                      </a>\
                  ';
            }
        }, {
            field: 'Item_Title',
            title: '商品标题',
            autoHide: false,
            sortable: false,
        }, {
            field: 'Order_Type',
            title: '订单状态',
            autoHide: false,
            sortable: false,
        }, {
            field: 'Total_Commission_Rate',
            title: '佣金比例',
            autoHide: false,
            sortable: false,
        }, {
            field: 'Total_Commission_Fee',
            title: '佣金金额',
            autoHide: false,
            sortable: false,
        }, {
            field: 'Trade_Parent_ID',
            title: '订单号',
            autoHide: false,
            sortable: false,
        }, {
            field: 'Order_Type',
            title: '订单来源',
            autoHide: false,
            sortable: false,
        }, {
            field: 'AgentName',
            title: '代理',
            autoHide: false,
            sortable: false,
        }, {
            field: 'TK_Earning_Time',
            title: '结算日期',
            autoHide: false,
            sortable: false,
        }, ],
    };

    // basic demo
    var localSelectorDemo = function () {

        options.search = {
            input: $('#generalOrderSearch'),
            onEnter: true,
        };

        var datatable = $('#local_record_selection').KTDatatable(options);

    };

    return {
        // public functions
        init: function () {
            localSelectorDemo();
        }
    };
}();

jQuery(document).ready(function () {
    KTDatatableRecordSelectionDemo.init();
    $("[name='orderStatusBtn']").click(function () {
        if ($(this).hasClass('btn-outline-hover-primary')) {
            $(this).removeClass('btn-outline-hover-primary')
            $(this).addClass('btn-primary')
            $("[name='orderStatusBtnAll']").removeClass('btn-primary').addClass('btn-outline-hover-primary')
        } else if ($(this).hasClass('btn-primary')) {
            $(this).removeClass('btn-primary')
            $(this).addClass('btn-outline-hover-primary')
            if ($(".btn-primary").length == 0) {
                $("[name='orderStatusBtnAll']").removeClass('btn-outline-hover-primary').addClass('btn-primary')
            }
        }
    })
    $("[name='orderStatusBtn']").click(function() {
        $('#orderStatus .btn-primary')
    })
    $("[name='orderStatusBtnAll']").click(function () {
        if ($(this).hasClass('btn-outline-hover-primary')) {
            $(this).removeClass('btn-outline-hover-primary')
            $(this).addClass('btn-primary')
            $("[name='orderStatusBtn']").removeClass('btn-primary').addClass('btn-outline-hover-primary')
        }
    })
});