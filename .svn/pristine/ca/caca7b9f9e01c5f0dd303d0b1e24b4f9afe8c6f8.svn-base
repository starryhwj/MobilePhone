{% extends "extends/base.html" %}
{% load staticfiles %}
{% block title %}聚宝云 | 观看直播任务{% endblock title %}
{% block css %}
{% endblock css %}
{% block content %}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    观看直播任务
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <button class="btn btn-default btn-bold btn-upper btn-font-sm" data-toggle="modal"
                        data-target="#createmissionModal" onclick="initcreatemodal()">
                        <i class="flaticon2-add-1"></i>
                        新建任务
                    </button>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="search-section">
                <div class="search-section__content search-section__content--border--all" id="status">
                    <label>任务状态:</label> &nbsp &nbsp
                    <button type="button" name='statusBtnAll' value="" class="btn btn-primary btn-sm">全部</button>
                    {% for status in mission_status %}
                    <button type="button" name='statusBtn' value="{{ status.0 }}"
                        class="btn btn-outline-hover-primary btn-sm">{{ status.1 }}</button>
                    {% endfor %}
                </div>
            </div>
            <!--begin: Search Form -->
            <div class="kt-form kt-fork--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-5 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label style="width: 60px;">创建日期:</label>
                                    </div>
                                    <div class="input-daterange input-group" id="kt_datepicker">
                                        <input type="text" class="form-control kt-input" name="starttime"
                                            id='id_starttime' placeholder="从" data-col-index="5" autocomplete="off" />
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="la la-ellipsis-h"></i></span>
                                        </div>
                                        <input type="text" class="form-control kt-input" name="endtime" id='id_endtime'
                                            placeholder="到" data-col-index="5" autocomplete="off" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-input-icon kt-input-icon--left">
                                    <input type="text" class="form-control" placeholder="请输入设备ID..."
                                        id="generalWatchLiveMissionSearch">
                                    <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">

            <!--begin: Datatable -->
            <div class="kt_datatable" id="datatable_WatchLiveMission"></div>

            <!--end: Datatable -->

            <!-- begin: Modal -->
            <div class="modal fade bd-example-modal-lg" id="createmissionModal" tabindex="-1" role="dialog"
                aria-labelledby="createmissionModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="createmissionModalLabel">新建观看直播任务</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="kt-form kt-form--fit kt-form--label-right" autocomplete="off"
                            id="kt_create_mission_form" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                {% csrf_token %}
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label>*目标主播链接</label>
                                        <input type='text' class="form-control" id="id_create_mission_targeturl"
                                            name="create_mission_targeturl">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label class="form-control-label">*目标观看量</label>
                                        <input type='text' class="form-control" id="id_create_mission_count"
                                            name="create_mission_count">
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="form-control-label">进入直播时间(默认即时开始)</label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control" readonly
                                                id="id_create_mission_starttime" name='create_mission_starttime' />
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i
                                                        class="la la-calendar-check-o glyphicon-th"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>延时(默认{{ config.defaultinterval }}分钟)</label>
                                        <input type='text' class="form-control" id="id_create_mission_interval"
                                            name="create_mission_interval">
                                    </div>
                                    <div class="col-lg-6">
                                        <label>持续时间(默认{{ config.defaultlasttime }}分钟)</label>
                                        <input type='text' class="form-control" id="id_create_mission_lasttime"
                                            name="create_mission_lasttime">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">留言内容(用回车分隔不同的留言，如果留言的开头带#号，则只使用一次)</label>
                                    <textarea class="form-control" id="id_create_commenttext" rows="3"></textarea>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>发言次数(默认{{ config.defaultcommenttimes }}次)</label>
                                        <input type='text' class="form-control" id="id_create_mission_commenttimes"
                                            name="create_mission_commenttimes">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-brand" data-dismiss="modal">关闭</button>
                                <button type="button" class="btn btn-primary " onclick="CreateMission()"
                                    id="id_create_mission" name="create_mission">发布
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade bd-example-modal-lg" id="editmissionModal" tabindex="-1" role="dialog"
                aria-labelledby="editmissionModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editmissionModalLabel">任务详情</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="kt-form kt-form--fit kt-form--label-right" autocomplete="off"
                            id="kt_edit_mission_form" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                {% csrf_token %}
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label>*目标主播链接</label>
                                        <input type="text" class="form-control" id="id_edit_mission_targeturl"
                                            name="edit_mission_targeturl">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label class="col-form-label">任务开始时间(默认即时开始)</label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control" readonly
                                                id="id_edit_mission_starttime" name='edit_mission_starttime' />
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i
                                                        class="la la-calendar-check-o glyphicon-th"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="col-form-label">任务结束时间(默认开始时间后一小时)</label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control" readonly
                                                id="id_edit_mission_endtime" name='edit_mission_endtime' />
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i
                                                        class="la la-calendar-check-o glyphicon-th"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <label>留言内容(用回车分隔不同的留言，如果留言的开头带#号，则只使用一次)</label>
                                        <textarea class="form-control" id="id_edit_mission_commenttext"
                                            name="edit_mission_commenttext" rows="3"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>发言次数(默认{{ config.defaultcommenttimes }}次)</label>
                                        <input type='text' class="form-control" id="id_edit_mission_commenttimes"
                                            name="edit_mission_commenttimes">
                                    </div>
                                </div>
                                <div class="form-group" style="display: none">
                                    <label>数据ID</label>
                                    <input type='text' class="form-control" id="id_edit_mission_data_id"
                                        name="edit_mission_data_id">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-brand" data-dismiss="modal">关闭</button>
                                <button type="button" class="btn btn-primary " onclick="EditMission()"
                                    id="id_edit_mission" name="edit_mission">保存
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end: Modal -->

            <!--begin: HideData-->
            <div class="btn btn-clean kt-hidden" id="data_url">{{ data_url }}</div>
            <div class="btn btn-clean kt-hidden" id="create_url">{{ create_url }}</div>
            <div class="btn btn-clean kt-hidden" id="delete_url">{{ delete_url }}</div>
            <div class="btn btn-clean kt-hidden" id="get_by_id_url">{{ get_by_id_url }}</div>
            <div class="btn btn-clean kt-hidden" id="edit_url">{{ edit_url }}</div>
            {% csrf_token %}
            <!--end: HideData-->
        </div>
    </div>
</div>
{% endblock content %}
{% block js %}
<script src="{% static 'js/bootstrap-datetimepicker.min.js' %}" type="text/javascript"></script>
<script src="{% static 'js/bootstrap-datetimepicker.zh-CN.js' %}" type="text/javascript"></script>
<script src="{% static 'js/bootstrap-datepicker.min.js' %}" type="text/javascript"></script>
<script src="{% static 'js/bootstrap-datepicker.zh-CN.min.js' %}" type="text/javascript"></script>
<script src="{% static 'plugins/custom/datatables/datatables.bundle.js' %}" type="text/javascript"></script>
<script src="{% static 'js/pages/custom/MissionManage/WatchLiveMission.js' %}" type="text/javascript"></script>
{% endblock js %}